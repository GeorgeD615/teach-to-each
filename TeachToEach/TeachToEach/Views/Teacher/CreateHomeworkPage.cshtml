@using TeachToEach.Domain.ViewModels.Teacher
@model HomeworkCreateViewModel
@{
    ViewData["Title"] = "CreateHomeworkPage";
}

<body>
    <section id="logo-title">
        <div class="content">
            <div class="row">
                <div class="col-2" id="logo">
                    <img id="logotip" src="~/images/main-logo.png" alt="Main logo">
                </div>
                <div class="col-10">
                    <h1 class="text-centre">Teach-to-each</h1>
                </div>
            </div>
        </div>
    </section>

    <h2 id="lk-s">Личный кабинет преподавателя</h2>

    <div id="lk-body" class="container-fluid">
        <div class="row">
            <div id="side-nav-stud" class="col-2">

                <div class="sidenav">
                    <a asp-controller="Teacher" asp-action="Teacher">Моя страница</a>
                    <a asp-controller="Teacher" asp-action="GetStudents">Ученики</a>
                    <a asp-controller="Teacher" asp-action="GetHWtoTeacher">Домашние задания</a>
                    <a asp-controller="Teacher" asp-action="GetRatings">Посмотреть отзывы</a>
                </div>

            </div>

            <div id="personal-data-stud" class="col-10">
                <form method="post" id="form-create-homework">
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="inputDescription">Домашнее задание</label>
                            <input asp-for="description" type="text" class="form-control" id="inputDescription" placeholder="Домашнее задание">
                            <span asp-validation-for="description" class="text-danger" />
                        </div>
                        <div class="form-group col-md-6">
                            <label for="inputDeadline">Deadline</label>
                            <input asp-for="deadline" type="datetime-local" class="form-control" id="inputDeadline" placeholder="Deadline" value="2023-12-26T18:00">
                            <span asp-validation-for="deadline" class="text-danger" />
                        </div>
                        <div asp-validation-summary="All" class="text-danger"></div>
                    </div>
                    <button id="btn-send-create-hw" class="btn btn-primary btn-lg float-right" type="submit">Отправить</button>
                </form>
            </div>
        </div>
    </div>
    <main>
        <aside>
            <h2>Связанные темы</h2>

            <ul>
                <li><a href="https://journal.tinkoff.ru/find-repetitor/">Как найти хорошего репетитора?</a></li>
                <li><a href="https://gb.ru/blog/kak-stat-samostostoyatelnym/">Как стать самостоятельным?</a></li>
            </ul>
        </aside>
    </main>

</body>

<script src="~/js/site.js" asp-append-version="true"></script>

@section scripts{

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}