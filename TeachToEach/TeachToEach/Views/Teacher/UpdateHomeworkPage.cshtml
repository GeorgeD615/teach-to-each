@using TeachToEach.Domain.ViewModels
@model HomeworkUpdateViewModel
@{
    ViewData["Title"] = "UpdateHomeworkPage";
}

<body>
    <section id="logo-title">
        <div class="content">
            <div class="row">
                <div class="col-2" id="logo">
                    <img id="logotip" src="~/images/main-logo.png" alt="Main logo">
                </div>
                <div class="col-10">
                    <h1 class="text-centre">Teach-to-each</h1>
                </div>
            </div>
        </div>
    </section>

    <h2 id="lk-s">Личный кабинет преподавателя</h2>

    <div id="lk-body" class="container-fluid">
        <div class="row">
            <div id="side-nav-stud" class="col-2">

                <div class="sidenav">
                    <a asp-controller="Teacher" asp-action="Teacher">Моя страница</a>
                    <a asp-controller="Teacher" asp-action="GetStudents">Ученики</a>
                    <a asp-controller="Teacher" asp-action="GetHWtoTeacher">Домашние задания</a>
                    <a asp-controller="Teacher" asp-action="GetRatings">Посмотреть отзывы</a>
                </div>

            </div>

            <div id="personal-data-stud" class="col-10">
                <p>Решение:</p>
                <p>@Model.solution</p>
                <form method="post" id="form-create-homework">
                    <div asp-validation-summary="All" style="font-size:23px; font-family:Impact" class="text-danger text-center"></div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="inputDescription">Домашнее задание</label>
                            <input asp-for="description" type="text" value="@Model.description" class="form-control" id="inputDescription" placeholder="Домашнее задание">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="inputDeadline">Deadline</label>
                            <input asp-for="deadline" type="datetime" value="@Model.deadline" class="form-control" id="inputDeadline" placeholder="Deadline">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="inputDescription">Комментарий к решению</label>
                            <input asp-for="teacher_comment" type="text" value="@Model.teacher_comment" class="form-control" id="teacher_comment" placeholder="Комментарий к решению">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="inputIsCompleted"> 
                                <input asp-for="is_completed" type="checkbox" id="inputIsCompleted">
                                Принять работу 
                            </label>
                        </div>
                    </div>
                    <button class="btn btn-primary btn-lg float-right" type="submit">Отправить</button>
                </form>
            </div>
        </div>
    </div>
    <main>
        <aside>
            <h2>Связанные темы</h2>

            <ul>
                <li><a href="#">Как найти хорошего репетитора?</a></li>
                <li><a href="#">Как стать самостоятельным?</a></li>
            </ul>
        </aside>
    </main>

</body>

<script src="~/js/site.js" asp-append-version="true"></script>