@using TeachToEach.Domain.ViewModels.Student
@model IEnumerable<StudentTeacherInfoViewModel>
@{
    ViewData["Title"] = "FindTeacher";
}

<body>
    <section id="logo-title">
        <div class="content">
            <div class="row">
                <div class="col-2" id="logo">
                    <img id="logotip" src="~/images/main-logo.png" alt="Main logo">
                </div>
                <div class="col-10">
                    <h1 class="text-centre">Teach-to-each</h1>
                </div>
            </div>
        </div>
    </section>

    <h2 id="lk-s">Личный кабинет ученика</h2>

    <div id="lk-body" class="container-fluid">
        <div class="row">
            <div id="side-nav-stud" class="col-2">

                <div class="sidenav">
                    <a asp-controller="Student" asp-action="Student">Моя страница</a>
                    <a asp-controller="Student" asp-action="GetTeachers">Мои занятия</a>
                    <a asp-controller="Student" asp-action="GetHWtoStudent">Домашние задания</a>
                    <a asp-controller="Student" asp-action="GetHWtoStudent">Найти преподавателя</a>

                </div>

            </div>

            <div id="personal-data-stud" class="col-10">
                <h2 id="lk-s">Найти преподавателя</h2>
                <form id="form-search-teacher">
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="inputEmail">Email</label>
                            <input type="email" class="form-control" id="inputEmail" placeholder="Email">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="inputLastName">Фамилия</label>
                            <input type="text" class="form-control" id="inputLastName" placeholder="Фамилия">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="inputFirstName">Имя</label>
                            <input type="text" class="form-control" id="inputFirstName" placeholder="Имя">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="inputDadName">Отчество</label>
                            <input type="text" class="form-control" id="inputDadName" placeholder="Отчество">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="inputCity">City</label>
                            <input type="text" class="form-control" id="inputCity">
                        </div>
                        <div class="form-group col-md-4">
                            <label for="inputSubject">Предмет</label>
                            <select id="inputSubject" class="form-control">
                                <option selected>Choose...</option>
                                <option>"Математика"</option>
                                <option>Информатика</option>
                                <option>Литература</option>
                                <option>Обществознание</option>
                                <option>Программирование</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" type="checkbox"> Есть отзывы на сайте
                            </label>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary" id="search-teacher">Найти</button>
                </form>
            </div>

        </div>

    </div>




    <main>
        <aside>
            <h2>Связанные темы</h2>

            <ul>
                <li><a href="#">Как найти хорошего репетитора?</a></li>
                <li><a href="#">Как стать самостоятельным?</a></li>
            </ul>
        </aside>
    </main>

</body>

<script src="~/js/site.js" asp-append-version="true"></script>

